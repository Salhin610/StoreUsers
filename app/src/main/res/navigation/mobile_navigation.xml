<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.madarsoft.storeusers.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_showUsersFragment"
            app:destination="@id/showUsersFragment" />
    </fragment>
    <fragment
        android:id="@+id/showUsersFragment"
        android:name="com.madarsoft.storeusers.ui.showUsers.ShowUsersFragment"
        android:label="fragment_show_users"
        tools:layout="@layout/fragment_show_users" />
</navigation>